<?xml version="1.0" encoding="utf-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	
	
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.appspot.Accent.controller.RegisterServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/RegisterServlet.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>OverzichtServlet</servlet-name>
		<servlet-class>com.appspot.Accent.controller.OverzichtServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>OverzichtServlet</servlet-name>
		<url-pattern>/Overzicht.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BeoordeelServlet</servlet-name>
		<servlet-class>com.appspot.Accent.controller.BeoordeelServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>BeoordeelServlet</servlet-name>
		<url-pattern>/BeoordeelServlet.do</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.appspot.Accent.controller.LoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet.do</url-pattern>
	</servlet-mapping>

		<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.appspot.Accent.controller.LogoutServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet.do</url-pattern>
	</servlet-mapping>
		
	<servlet>
		<servlet-name>BeoordelingOphalenServlet</servlet-name>
		<servlet-class>com.appspot.Accent.controller.BeoordelingOphalenServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>BeoordelingOphalenServlet</servlet-name>
		<url-pattern>/BeoordelingOphalenServlet.do</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>

	<listener>
		<listener-class>com.appspot.Accent.controller.UserContextListener</listener-class>
	</listener>

</web-app>
